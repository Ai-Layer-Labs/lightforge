{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@rcrt-builder/core": ["./packages/core/src"],
      "@rcrt-builder/sdk": ["./packages/sdk/src"],
      "@rcrt-builder/node-sdk": ["./packages/node-sdk/src"],
      "@rcrt-builder/runtime": ["./packages/runtime/src"],
      "@rcrt-builder/ui": ["./packages/ui/src"],
      "@rcrt-builder/management": ["./packages/management/src"],
      "@rcrt-builder/heroui-breadcrumbs": ["./packages/heroui-breadcrumbs/src"],
      "@rcrt-builder/nodes-*": ["./packages/nodes/*/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "out"]
}
