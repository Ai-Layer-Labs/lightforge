{
  "name": "rcrt-visual-builder",
  "version": "1.0.0",
  "private": true,
  "description": "RCRT Visual Agent Builder System - Everything is a Breadcrumb",
  "author": "RCRT Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "build": "pnpm run build:packages && pnpm run build:apps",
    "build:packages": "pnpm --filter './packages/**' run build",
    "build:apps": "pnpm --filter './apps/**' run build",
    "test": "pnpm --parallel run test",
    "clean": "pnpm --parallel run clean && rm -rf node_modules",
    "bootstrap": "tsx scripts/bootstrap.ts",
    "type-check": "pnpm --parallel run type-check"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.1"
  }
}
