{
  "name": "@rcrt-builder/tools",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./langchain": {
      "import": "./dist/langchain.mjs",
      "require": "./dist/langchain.js",
      "types": "./dist/langchain.d.ts"
    },
    "./registry": {
      "import": "./dist/registry.mjs",
      "require": "./dist/registry.js",
      "types": "./dist/registry.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@rcrt-builder/core": "workspace:*",
    "@rcrt-builder/sdk": "workspace:*"
  },
  "peerDependencies": {
    "langchain": "^0.3.0"
  },
  "peerDependenciesMeta": {
    "langchain": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
