{
  "schema_name": "tool.v1",
  "title": "Agent Helper Tool",
  "tags": ["tool", "tool:agent-helper", "category:system", "workspace:tools"],
  "context": {
    "name": "agent-helper",
    "version": "1.0.0",
    "description": "Provides system guidance, documentation, and examples for LLM-based agents",
    "category": "system",
    
    "implementation": {
      "type": "builtin",
      "runtime": "nodejs",
      "module": "@rcrt-builder/tools",
      "export": "builtinTools['agent-helper']",
      "instantiate": false
    },
    
    "definition": {
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "What do you need help with? (e.g., 'how to use secrets', 'create breadcrumbs')"
          },
          "topic": {
            "type": "string",
            "enum": ["breadcrumbs", "tools", "secrets", "search", "patterns", "examples", "overview"],
            "description": "Specific topic for focused guidance (optional)"
          },
          "detail_level": {
            "type": "string",
            "enum": ["quick", "detailed", "examples"],
            "default": "detailed"
          }
        },
        "required": ["query"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "guidance": {
            "type": "object",
            "properties": {
              "summary": {"type": "string"},
              "detailed_explanation": {"type": "string"},
              "code_examples": {"type": "array"},
              "related_documentation": {"type": "array"},
              "next_steps": {"type": "array"}
            }
          }
        }
      },
      "examples": [
        {
          "title": "Get help with secrets",
          "input": {"query": "how to use secrets"},
          "output": {
            "guidance": {
              "summary": "How to access and use secrets in RCRT agents",
              "detailed_explanation": "Secrets store encrypted credentials..."
            }
          },
          "explanation": "Access guidance with result.guidance.summary or result.guidance.detailed_explanation"
        }
      ]
    },
    
    "configuration": {
      "configurable": false
    },
    
    "capabilities": {
      "async": true,
      "timeout": 5000,
      "retries": 0
    },
    
    "metadata": {
      "author": "system",
      "created": "2024-01-01T00:00:00Z",
      "source_of_truth": "bootstrap-breadcrumbs/tools/agent-helper.json"
    }
  }
}
