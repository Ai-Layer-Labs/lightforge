{
  "schema_name": "tool.v1",
  "title": "Browser Context Capture Tool",
  "tags": ["tool", "tool:browser-context-capture", "category:browser", "workspace:tools"],
  "context": {
    "name": "browser-context-capture",
    "version": "1.0.0",
    "description": "Capture and extract context from browser pages - DOM, metadata, content",
    "category": "browser",
    
    "implementation": {
      "type": "builtin",
      "runtime": "nodejs",
      "module": "@rcrt-builder/tools",
      "export": "builtinTools['browser-context-capture']",
      "instantiate": false
    },
    
    "definition": {
      "inputSchema": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": ["capture", "extract", "search-dom"],
            "description": "Action to perform"
          },
          "selector": {"type": "string", "description": "CSS selector (for extract/search-dom)"},
          "attribute": {"type": "string", "description": "Attribute to extract"}
        },
        "required": ["action"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "url": {"type": "string"},
          "title": {"type": "string"},
          "content": {"type": "string"},
          "dom": {"type": "object"},
          "metadata": {"type": "object"}
        }
      },
      "examples": [
        {
          "title": "Capture current page",
          "input": {"action": "capture"},
          "output": {
            "url": "https://example.com",
            "title": "Example Page",
            "content": "Page content..."
          },
          "explanation": "Access page data with result.title, result.content, etc."
        }
      ]
    },
    
    "configuration": {
      "configurable": false
    },
    
    "capabilities": {
      "async": true,
      "timeout": 10000,
      "retries": 0
    },
    
    "metadata": {
      "author": "system",
      "created": "2024-01-01T00:00:00Z",
      "source_of_truth": "bootstrap-breadcrumbs/tools/browser-context-capture.json"
    }
  }
}
