{
  "schema_name": "tool.v1",
  "title": "Agent Loader Tool",
  "tags": ["tool", "tool:agent-loader", "category:system", "workspace:tools"],
  "context": {
    "name": "agent-loader",
    "version": "1.0.0",
    "description": "Load and manage agent definitions dynamically",
    "category": "system",
    
    "implementation": {
      "type": "builtin",
      "runtime": "nodejs",
      "module": "@rcrt-builder/tools",
      "export": "builtinTools['agent-loader']",
      "instantiate": false
    },
    
    "definition": {
      "inputSchema": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": ["load", "list", "reload"],
            "description": "Action to perform"
          },
          "agent_id": {"type": "string", "description": "Agent ID to load/reload"}
        },
        "required": ["action"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "agents": {"type": "array"},
          "agent": {"type": "object"}
        }
      },
      "examples": [
        {
          "title": "List all agents",
          "input": {"action": "list"},
          "output": {
            "success": true,
            "agents": [{"agent_id": "default-chat-assistant", "status": "active"}]
          },
          "explanation": "Access agents list with result.agents"
        }
      ]
    },
    
    "configuration": {
      "configurable": false
    },
    
    "capabilities": {
      "async": true,
      "timeout": 10000,
      "retries": 0
    },
    
    "metadata": {
      "author": "system",
      "created": "2024-01-01T00:00:00Z",
      "source_of_truth": "bootstrap-breadcrumbs/tools/agent-loader.json"
    }
  }
}
