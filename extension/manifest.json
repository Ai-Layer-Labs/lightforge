{
  "manifest_version": 3,
  "name": "RCRT Chat",
  "version": "2.0.0",
  "description": "Your AI assistant powered by Right Context Right Time - chat with tools and agents directly from your browser",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "debugger",
    "alarms",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:8082/*",
    "http://localhost:8081/*",
    "http://localhost:5173/*",
    "http://127.0.0.1:8081/*",
    "http://127.0.0.1:8080/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/think-os-agent.png",
      "32": "icons/think-os-agent.png",
      "48": "icons/think-os-agent.png",
      "128": "icons/think-os-agent.png"
    }
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "content_scripts": [],
  "web_accessible_resources": [
    {
      "resources": ["buildDomTree.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/think-os-agent.png",
    "32": "icons/think-os-agent.png",
    "48": "icons/think-os-agent.png",
    "128": "icons/think-os-agent.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:3000 http://localhost:8082 http://localhost:8081 http://localhost:5173 http://127.0.0.1:8081 http://127.0.0.1:8080;"
  }
}