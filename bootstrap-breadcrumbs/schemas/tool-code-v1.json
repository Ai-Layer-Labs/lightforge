{
  "schema_name": "schema.def.v1",
  "title": "Tool Code Schema Definition",
  "tags": [
    "schema:definition",
    "system:bootstrap",
    "defines:tool.code.v1"
  ],
  "context": {
    "defines_schema": "tool.code.v1",
    "category": "tools",
    "lifecycle": {
      "ttl_policy": {
        "type": "never",
        "description": "Tool definitions are permanent system resources",
        "allow_override": false
      }
    },
    "field_definitions": {
      "name": {
        "type": "string",
        "required": true,
        "description": "Tool name/identifier"
      },
      "description": {
        "type": "string",
        "required": true,
        "description": "What the tool does",
        "embedding_target": true
      },
      "code": {
        "type": "string",
        "required": true,
        "description": "Tool implementation code",
        "llm_exclude": true
      },
      "input_schema": {
        "type": "object",
        "required": true,
        "description": "JSON Schema for tool inputs"
      },
      "output_schema": {
        "type": "object",
        "required": true,
        "description": "JSON Schema for tool outputs"
      },
      "examples": {
        "type": "array",
        "required": false,
        "description": "Example tool invocations"
      }
    }
  },
  "description": "Self-contained Deno-based tool definitions",
  "semantic_version": "1.0.0",
  "llm_hints": {
    "include": [
      "name",
      "description",
      "input_schema",
      "output_schema",
      "examples"
    ],
    "exclude": [
      "code",
      "permissions",
      "limits",
      "ui_schema",
      "bootstrap"
    ]
  }
}