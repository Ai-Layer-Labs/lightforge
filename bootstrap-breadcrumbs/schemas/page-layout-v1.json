{
  "schema_name": "schema.def.v1",
  "title": "Page Layout Schema Definition",
  "tags": ["schema", "schema:page.layout.v1", "system:schema"],
  "context": {
    "schema_name": "page.layout.v1",
    "version": "1.0.0",
    "description": "Defines dynamic page layouts with sections and slots that can reference breadcrumbs",
    "purpose": "Enable LLMs and users to create pages dynamically by composing breadcrumbs into layouts",
    "structure": {
      "title": {
        "type": "string",
        "required": true,
        "description": "Page title displayed in header"
      },
      "tags": {
        "type": "array",
        "required": true,
        "description": "Must include 'page' and 'page:{name}' for routing",
        "example": ["page", "page:quick-start", "system:page"]
      },
      "context": {
        "type": "object",
        "required": true,
        "properties": {
          "layout": {
            "type": "object",
            "required": true,
            "description": "Layout definition with sections and rendering instructions",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["flex-column", "flex-row", "grid", "custom"],
                "description": "Root layout type"
              },
              "sections": {
                "type": "array",
                "description": "Array of section definitions",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "required": true
                    },
                    "type": {
                      "type": "string",
                      "enum": ["flex-column", "flex-row", "grid", "component"]
                    },
                    "slots": {
                      "type": "array",
                      "description": "Content slots that reference breadcrumbs",
                      "items": {
                        "type": "object",
                        "properties": {
                          "breadcrumb_id": {
                            "type": "string",
                            "description": "Specific breadcrumb UUID to render"
                          },
                          "breadcrumb_search": {
                            "type": "object",
                            "description": "Search criteria to find breadcrumbs",
                            "properties": {
                              "schema_name": {"type": "string"},
                              "tag": {"type": "string"},
                              "limit": {"type": "number"}
                            }
                          },
                          "render_mode": {
                            "type": "string",
                            "enum": ["config_form", "display", "card", "custom"],
                            "description": "How to render the breadcrumb content"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "metadata": {
            "type": "object",
            "description": "Optional page metadata",
            "properties": {
              "description": {"type": "string"},
              "author": {"type": "string"},
              "version": {"type": "string"}
            }
          }
        }
      }
    },
    "examples": [
      {
        "description": "Simple page with tool config forms",
        "breadcrumb": {
          "schema_name": "page.layout.v1",
          "title": "Tool Configuration Page",
          "tags": ["page", "page:tools", "workspace:pages"],
          "context": {
            "layout": {
              "type": "flex-column",
              "sections": [
                {
                  "id": "tools-section",
                  "type": "grid",
                  "columns": 2,
                  "slots": [
                    {
                      "breadcrumb_search": {
                        "schema_name": "tool.code.v1",
                        "tag": "tool:openrouter"
                      },
                      "render_mode": "config_form"
                    }
                  ]
                }
              ]
            },
            "metadata": {
              "description": "Configure your tools"
            }
          }
        }
      }
    ],
    "llm_hints": {
      "summary": "Page layout schema - compose breadcrumbs into dynamic pages",
      "when_to_use": "When creating new pages or UI layouts from breadcrumbs",
      "key_concepts": ["sections define structure", "slots reference breadcrumbs", "render_mode controls display"]
    }
  }
}

