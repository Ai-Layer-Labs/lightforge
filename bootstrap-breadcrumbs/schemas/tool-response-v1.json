{
  "schema_name": "schema.def.v1",
  "title": "Tool Response Schema Definition",
  "tags": ["schema:definition", "system:bootstrap", "defines:tool.response.v1"],
  "context": {
    "defines_schema": "tool.response.v1",
    "schema_version": "1.0.0",
    "category": "tools",
    "description": "Tool execution results",
    
    "llm_hints": {
      "transform": {
        "formatted": {
          "type": "format",
          "format": "Tool {tool} ({status}): {output}"
        }
      },
      "mode": "replace"
    },
    
    "lifecycle": {
      "ttl_policy": {
        "type": "duration",
        "config": {
          "hours": 24
        },
        "description": "Tool responses expire after 24 hours",
        "allow_override": true,
        "conditional_policies": [
          {
            "condition": {
              "tag_contains": "health:check"
            },
            "policy": {
              "type": "duration",
              "config": {
                "minutes": 5
              }
            },
            "description": "Health checks expire in 5 minutes"
          },
          {
            "condition": {
              "tag_contains": "persist"
            },
            "policy": {
              "type": "never"
            },
            "description": "Persisted responses never expire"
          }
        ]
      }
    },
    
    "field_definitions": {
      "tool": {
        "type": "string",
        "required": true,
        "description": "Tool name that was executed"
      },
      "status": {
        "type": "string",
        "required": true,
        "description": "Execution status (success, error)"
      },
      "output": {
        "type": "any",
        "required": false,
        "description": "Tool output data"
      },
      "error": {
        "type": "string",
        "required": false,
        "description": "Error message if failed"
      },
      "execution_time_ms": {
        "type": "number",
        "required": false,
        "description": "How long execution took"
      }
    }
  }
}

