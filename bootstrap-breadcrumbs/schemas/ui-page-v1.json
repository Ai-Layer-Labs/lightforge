{
  "schema_name": "schema.def.v1",
  "title": "UI Page Schema Definition",
  "tags": [
    "schema",
    "schema:ui.page.v1",
    "system:schema"
  ],
  "context": {
    "schema_name": "ui.page.v1",
    "purpose": "Enable LLMs to create complete, interactive UIs purely from breadcrumbs - no code required",
    "structure": {
      "title": {
        "type": "string",
        "required": true,
        "description": "Page title"
      },
      "tags": {
        "type": "array",
        "required": true,
        "description": "Must include 'page' and 'page:{name}' for routing",
        "example": [
          "page",
          "page:quick-start",
          "system:page"
        ]
      },
      "context": {
        "type": "object",
        "required": true,
        "properties": {
          "state_ref": {
            "type": "string",
            "description": "Reference to ui.state.v1 breadcrumb (tag or ID)",
            "example": "state:quick-start-wizard"
          },
          "ui": {
            "type": "object",
            "required": true,
            "description": "HeroUI component tree in JSON format - root must be single component",
            "example": {
              "div": {
                "className": "p-8",
                "children": [
                  {
                    "h1": {
                      "children": "Hello World"
                    }
                  }
                ]
              }
            }
          },
          "actions": {
            "type": "object",
            "description": "Named actions that can be triggered from UI",
            "example": {
              "createSecret": {
                "action": "api.call",
                "method": "POST",
                "endpoint": "/secrets",
                "body": {
                  "name": "{{state.secretName}}"
                }
              }
            }
          },
          "data_sources": {
            "type": "object",
            "description": "Named data sources loaded from breadcrumbs",
            "example": {
              "providers": {
                "breadcrumb_search": {
                  "schema_name": "tool.code.v1",
                  "tag": "llm"
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "description": "All HeroUI components are available plus special helpers",
      "heroui_components": [
        "Card",
        "Button",
        "Input",
        "Modal",
        "Progress",
        "Tabs",
        "etc"
      ],
      "special_components": [
        "ConditionalRender",
        "ForEach",
        "DataLoader",
        "FormField",
        "ActionButton"
      ],
      "html_elements": [
        "div",
        "span",
        "h1",
        "h2",
        "p",
        "button",
        "etc"
      ]
    },
    "template_syntax": {
      "variables": "{{state.formData.name}}",
      "comparisons": "{{state.step === 1}}",
      "calculations": "{{calc(state.step / 4 * 100)}}",
      "paths": "Dot notation for nested access"
    },
    "action_types": {
      "api.call": "Make RCRT API request",
      "setState": "Update state breadcrumb",
      "navigate": "Navigate to route",
      "sequence": "Execute multiple actions in order",
      "log": "Debug logging"
    },
    "examples": [
      {
        "description": "Simple page with button that creates a breadcrumb",
        "breadcrumb": {
          "schema_name": "ui.page.v1",
          "title": "Test Page",
          "tags": [
            "page",
            "page:test"
          ],
          "context": {
            "ui": {
              "div": {
                "className": "p-8",
                "children": [
                  {
                    "h1": {
                      "children": "Test Page"
                    }
                  },
                  {
                    "Button": {
                      "color": "primary",
                      "onPress": {
                        "action": "api.call",
                        "method": "POST",
                        "endpoint": "/breadcrumbs",
                        "body": {
                          "title": "Test Breadcrumb",
                          "schema_name": "test.v1",
                          "tags": [
                            "test"
                          ],
                          "context": {}
                        }
                      },
                      "children": "Create Breadcrumb"
                    }
                  }
                ]
              }
            }
          }
        }
      }
    ]
  },
  "description": "Defines dynamic pages with HeroUI components, state management, and RCRT API actions",
  "semantic_version": "1.0.0",
  "llm_hints": {
    "summary": "UI page schema - create complete interactive pages from JSON",
    "when_to_use": "When creating new pages with forms, buttons, lists, wizards",
    "key_concepts": [
      "HeroUI components referenced by name",
      "State stored in ui.state.v1 breadcrumbs",
      "Actions call RCRT API directly",
      "Templates {{}} for dynamic values",
      "No code required - pure JSON"
    ]
  }
}